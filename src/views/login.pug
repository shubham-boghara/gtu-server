extends main/main

block content
   .min-h-screen.bg-gray-50.flex.flex-col.justify-center.py-12(class='sm:px-6 lg:px-8')
        .div(class='sm:mx-auto sm:w-full sm:max-w-md')
                img.mx-auto.h-12.w-auto(src='/svg/layers.svg' alt='Workflow')
                h2.mt-6.text-center.text-3xl.font-extrabold.text-gray-900
                        | Sign in to your account
                p.mt-2.text-center.text-sm.text-gray-600.max-w
        .mt-8(class='sm:mx-auto sm:w-full sm:max-w-md')
                .bg-white.py-8.px-4.shadow(class='sm:rounded-lg sm:px-10')
                        form.space-y-6(action='/login' method='POST')
                                div
                                        label.block.text-sm.font-medium.text-gray-700(for='email')
                                                | Email address
                                        .mt-1
                                                input#email.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400(name='email' type='email' autocomplete='email' required='' class='focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm')
                                div
                                        label.block.text-sm.font-medium.text-gray-700(for='password')
                                                | Password
                                        .mt-1
                                                input#password.appearance-none.block.w-full.px-3.py-2.border.border-gray-300.rounded-md.shadow-sm.placeholder-gray-400(name='password' type='password' autocomplete='current-password' required='' class='focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm')
                                .flex.items-center.justify-between
                                        .flex.items-center
                                                input#remember_me.h-4.w-4.text-indigo-600.border-gray-300.rounded(name='remember_me' type='checkbox' class='focus:ring-indigo-500')
                                                label.ml-2.block.text-sm.text-gray-900(for='remember_me')
                                                        | Remember me
                                div
                                        button.w-full.flex.justify-center.py-2.px-4.border.border-transparent.rounded-md.shadow-sm.text-sm.font-medium.text-white.bg-indigo-600(type='submit' class='hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500')
                                                | Sign in
                        .mt-6
                                .relative
                                        .absolute.inset-0.flex.items-center
                                                .w-full.border-t.border-gray-300
                                        .relative.flex.justify-center.text-sm
                                                span.px-2.bg-white.text-gray-500
                                                        | Or continue with
                                .mt-1.grid.grid-cols-1.gap-1
                                        div
                                                a.w-full.inline-flex.justify-center.py-2.px-4.border.border-gray-300.rounded-md.shadow-sm.bg-white.text-sm.font-medium.text-gray-500(href='#' class='hover:bg-gray-50')
                                                        span.sr-only Sign in with Google
                                                        svg.w-5.h-5(fill='currentColor' viewbox='0 0 20 20' aria-hidden='true')
                                                                path(d='M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84')
